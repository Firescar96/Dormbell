<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="edu.mit.dormbell.dormbell.SettingsFragment"
    android:background="#800000">

    <!-- TODO: Update blank fragment layout -->

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_disturb"
        android:id="@+id/disturb"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:checked="false"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_notifications"
        android:id="@+id/notifications"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:checked="false"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/themeDesription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_theme"
        android:id="@+id/themeDesription"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/deleteDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_delete"
        android:id="@+id/deleteDescription"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/disturb"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button3"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignLeft="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="hours:"
        android:id="@+id/textView4"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to"
        android:id="@+id/textView5"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

</RelativeLayout>
